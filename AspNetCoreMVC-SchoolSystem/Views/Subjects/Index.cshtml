@using AspNetCoreMVC_SchoolSystem.DTO
@model IEnumerable<SubjectDTO>
<h1>Subjects</h1>
<a asp-action="Create" class="btn btn-success" >Create</a>
@foreach (var item in Model) {
    <div class="border border-1 border-dark p-2 ">
        <h5>@item.Name</h5>
        Id: @item.Id
        <br />
        @if (User.Identity.IsAuthenticated && (User.IsInRole("Admin") || User.IsInRole("Chief") || User.IsInRole("Teacher"))) {


            <form method="post">
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <button type="submit" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</button>
                </form>

        }
    </div>
}
    